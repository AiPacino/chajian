{
  "manifest_version": 2,
  "name": "蘑菇天气",
  "description": "天气预报",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.cnzz.com; object-src 'self'",
  "permissions": [
    "*://*/*",
    "storage",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "alarms",
    "notifications"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/lib/jquery.js",
        "js/lib/echarts.js",
        "js/lib/slider.js",
        "js/lib/qrcode.min.js",
        "js/lib/postscribe.js",
        "js/main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "喔喔天气",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "update_url": "http://upext.chrome.360.cn/intf.php?method=ExtUpdate.query",
  "version": "1.1.4.3",
  "web_accessible_resources": [
    "css/*.css",
    "js/*.js",
    "img/*.png",
    "img/*.jpg"
  ]
}